{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orion-ds.com/schemas/Field.schema.json",
  "title": "Field",
  "description": "A form input component with built-in label, validation, and helper text support.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["text", "email", "password", "number", "tel", "url", "search", "date", "time", "datetime-local"],
      "default": "text",
      "description": "Input type"
    },
    "label": {
      "type": "string",
      "description": "Field label text"
    },
    "placeholder": {
      "type": "string",
      "description": "Placeholder text shown when empty"
    },
    "helperText": {
      "type": "string",
      "description": "Helper or error message below input"
    },
    "error": {
      "type": "boolean",
      "default": false,
      "description": "Shows error state styling"
    },
    "required": {
      "type": "boolean",
      "default": false,
      "description": "Marks field as required"
    },
    "disabled": {
      "type": "boolean",
      "default": false,
      "description": "Disables the input"
    },
    "size": {
      "type": "string",
      "enum": ["sm", "md", "lg"],
      "default": "md",
      "description": "Input size"
    },
    "icon": {
      "description": "Icon element to display inside input"
    },
    "value": {
      "description": "Controlled input value"
    },
    "onChange": {
      "description": "Change handler function"
    }
  },
  "required": [],
  "examples": [
    {
      "description": "Basic text field with label",
      "code": "<Field\n  label=\"Full Name\"\n  placeholder=\"Enter your name\"\n/>"
    },
    {
      "description": "Email field with validation error",
      "code": "<Field\n  type=\"email\"\n  label=\"Email Address\"\n  error\n  helperText=\"Please enter a valid email\"\n/>"
    },
    {
      "description": "Password field with helper text",
      "code": "<Field\n  type=\"password\"\n  label=\"Password\"\n  helperText=\"Must be at least 8 characters\"\n  required\n/>"
    },
    {
      "description": "Search field with icon",
      "code": "<Field\n  type=\"search\"\n  placeholder=\"Search...\"\n  icon={<Search size={18} />}\n/>"
    }
  ],
  "aiPrompts": [
    "Create an email input with validation",
    "Make a password field with requirements",
    "Add a search input with a magnifying glass icon",
    "Create a phone number input field",
    "Build a date picker field"
  ]
}
