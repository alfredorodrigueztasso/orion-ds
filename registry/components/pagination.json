{
  "$schema": "https://orion-ds.dev/schema/registry-item.json",
  "name": "pagination",
  "type": "registry:component",
  "title": "Pagination",
  "description": "Page navigation controls",
  "category": "navigation",
  "files": [
    {
      "path": "packages/react/src/components/Pagination/Pagination.tsx",
      "type": "registry:component"
    },
    {
      "path": "packages/react/src/components/Pagination/Pagination.types.ts",
      "type": "registry:types"
    },
    {
      "path": "packages/react/src/components/Pagination/Pagination.module.css",
      "type": "registry:styles"
    },
    {
      "path": "packages/react/src/components/Pagination/index.ts",
      "type": "registry:index"
    }
  ],
  "props": [
    {
      "name": "currentPage",
      "type": "number",
      "description": "Current active page (1-indexed)",
      "required": true
    },
    {
      "name": "totalPages",
      "type": "number",
      "description": "Total number of pages",
      "required": true
    },
    {
      "name": "onPageChange",
      "type": "(page: number) => void",
      "description": "Callback when page changes",
      "required": true
    },
    {
      "name": "siblingCount",
      "type": "number",
      "description": "Number of sibling pages to show on each side of current page",
      "default": 1
    },
    {
      "name": "showFirstLast",
      "type": "boolean",
      "description": "Whether to show first/last page buttons",
      "default": true
    },
    {
      "name": "showPrevNext",
      "type": "boolean",
      "description": "Whether to show previous/next buttons",
      "default": true
    },
    {
      "name": "size",
      "type": "PaginationSize",
      "description": "Size variant",
      "default": "md",
      "values": [
        "sm",
        "md",
        "lg"
      ]
    },
    {
      "name": "disabled",
      "type": "boolean",
      "description": "Whether the pagination is disabled",
      "default": false
    }
  ],
  "tokens": [
    "--interactive-primary",
    "--surface-base",
    "--border-subtle"
  ],
  "examples": [
    {
      "title": "Basic pagination",
      "code": "<Pagination\n  currentPage={1}\n  totalPages={10}\n  onPageChange={(page) => setPage(page)}\n/>"
    }
  ],
  "accessibility": {
    "role": "navigation",
    "ariaAttributes": [
      "aria-label=\"Pagination\""
    ]
  },
  "modeAware": false,
  "preview": {
    "url": "https://orion-ds.dev/library.html#pagination",
    "local": "/library.html#pagination"
  },
  "import": "import { Pagination } from '@orion-ds/react'",
  "cssImport": "import '@orion-ds/react/styles.css'"
}
