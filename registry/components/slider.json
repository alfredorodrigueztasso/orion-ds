{
  "$schema": "https://orion-ds.dev/schema/registry-item.json",
  "name": "slider",
  "type": "registry:component",
  "title": "Slider",
  "description": "Slider component",
  "category": "forms",
  "files": [
    {
      "path": "packages/react/src/components/Slider/Slider.tsx",
      "type": "registry:component"
    },
    {
      "path": "packages/react/src/components/Slider/Slider.types.ts",
      "type": "registry:types"
    },
    {
      "path": "packages/react/src/components/Slider/Slider.module.css",
      "type": "registry:styles"
    },
    {
      "path": "packages/react/src/components/Slider/index.ts",
      "type": "registry:index"
    }
  ],
  "props": [
    {
      "name": "value",
      "type": "number",
      "description": "Current value",
      "required": true
    },
    {
      "name": "onChange",
      "type": "(value: number) => void",
      "description": "Callback when value changes",
      "required": true
    },
    {
      "name": "min",
      "type": "number",
      "description": "Minimum value",
      "default": 0
    },
    {
      "name": "max",
      "type": "number",
      "description": "Maximum value",
      "default": 100
    },
    {
      "name": "step",
      "type": "number",
      "description": "Step increment",
      "default": 1
    },
    {
      "name": "size",
      "type": "SliderSize",
      "description": "Size variant",
      "default": "md",
      "values": [
        "sm",
        "md",
        "lg"
      ]
    },
    {
      "name": "disabled",
      "type": "boolean",
      "description": "Whether the slider is disabled",
      "default": false
    },
    {
      "name": "showValue",
      "type": "boolean",
      "description": "Show the current value above the thumb",
      "default": false
    },
    {
      "name": "formatValue",
      "type": "(value: number) => string",
      "description": "Format function for displaying the value"
    },
    {
      "name": "showLabels",
      "type": "boolean",
      "description": "Show min and max labels",
      "default": false
    },
    {
      "name": "showTicks",
      "type": "boolean",
      "description": "Show tick marks",
      "default": false
    },
    {
      "name": "tickValues",
      "type": "number[]",
      "description": "Custom tick values (if not provided, uses step)"
    },
    {
      "name": "label",
      "type": "string",
      "description": "Label for the slider (accessibility)"
    },
    {
      "name": "id",
      "type": "string",
      "description": "ID for the slider input"
    },
    {
      "name": "onChangeStart",
      "type": "() => void",
      "description": "Callback when dragging starts"
    },
    {
      "name": "onChangeEnd",
      "type": "(value: number) => void",
      "description": "Callback when dragging ends"
    }
  ],
  "tokens": [
    "--interactive-primary",
    "--surface-layer"
  ],
  "examples": [
    {
      "title": "Basic slider",
      "code": "<Slider min={0} max={100} value={50} onChange={(val) => setValue(val)} />"
    }
  ],
  "accessibility": {
    "role": "slider",
    "ariaAttributes": [
      "aria-valuenow",
      "aria-valuemin",
      "aria-valuemax",
      "aria-label"
    ],
    "keyboardNav": [
      {
        "key": "ArrowLeft/Right",
        "action": "Decrease/increase value"
      }
    ]
  },
  "modeAware": false,
  "preview": {
    "url": "https://orion-ds.dev/library.html#slider",
    "local": "/library.html#slider"
  },
  "import": "import { Slider } from '@orion-ds/react'",
  "cssImport": "import '@orion-ds/react/styles.css'"
}
