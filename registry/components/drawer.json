{
  "$schema": "https://orion-ds.dev/schema/registry-item.json",
  "name": "drawer",
  "type": "registry:component",
  "title": "Drawer",
  "description": "Drawer component",
  "category": "overlays",
  "files": [
    {
      "path": "packages/react/src/components/Drawer/Drawer.tsx",
      "type": "registry:component"
    },
    {
      "path": "packages/react/src/components/Drawer/Drawer.types.ts",
      "type": "registry:types"
    },
    {
      "path": "packages/react/src/components/Drawer/Drawer.module.css",
      "type": "registry:styles"
    },
    {
      "path": "packages/react/src/components/Drawer/index.ts",
      "type": "registry:index"
    }
  ],
  "props": [
    {
      "name": "open",
      "type": "boolean",
      "description": "Whether the drawer is open",
      "required": true
    },
    {
      "name": "onClose",
      "type": "() => void",
      "description": "Callback when the drawer should close",
      "required": true
    },
    {
      "name": "placement",
      "type": "DrawerPlacement",
      "description": "Placement of the drawer",
      "default": "right",
      "values": [
        "left",
        "right",
        "top",
        "bottom"
      ]
    },
    {
      "name": "size",
      "type": "DrawerSize",
      "description": "Size of the drawer",
      "default": "md",
      "values": [
        "sm",
        "md",
        "lg",
        "xl",
        "full"
      ]
    },
    {
      "name": "closeOnBackdrop",
      "type": "boolean",
      "description": "Whether to close when clicking the backdrop",
      "default": true
    },
    {
      "name": "closeOnEscape",
      "type": "boolean",
      "description": "Whether to close when pressing Escape",
      "default": true
    },
    {
      "name": "showCloseButton",
      "type": "boolean",
      "description": "Whether to show a close button",
      "default": true
    }
  ],
  "subComponents": [
    {
      "name": "Drawer.Header",
      "description": "Drawer header"
    },
    {
      "name": "Drawer.Body",
      "description": "Drawer content"
    },
    {
      "name": "Drawer.Footer",
      "description": "Drawer footer"
    }
  ],
  "tokens": [
    "--surface-base",
    "--border-subtle",
    "--radius-container",
    "--shadow-xl"
  ],
  "examples": [
    {
      "title": "Basic drawer",
      "code": "<Drawer open={isOpen} onClose={() => setIsOpen(false)} placement=\"right\">\n  <Drawer.Header>Settings</Drawer.Header>\n  <Drawer.Body>Content</Drawer.Body>\n</Drawer>"
    }
  ],
  "accessibility": {
    "role": "dialog",
    "ariaAttributes": [
      "aria-modal",
      "aria-label"
    ],
    "keyboardNav": [
      {
        "key": "Escape",
        "action": "Close drawer"
      },
      {
        "key": "Tab",
        "action": "Navigate within drawer (focus trap)"
      }
    ]
  },
  "modeAware": false,
  "preview": {
    "url": "https://orion-ds.dev/library.html#drawer",
    "local": "/library.html#drawer"
  },
  "import": "import { Drawer } from '@orion-ds/react'",
  "cssImport": "import '@orion-ds/react/styles.css'"
}
