{
  "$schema": "https://orion-ds.dev/schema/registry-item.json",
  "name": "data-table",
  "type": "registry:component",
  "title": "DataTable",
  "description": "DataTable component",
  "category": "utilities",
  "files": [
    {
      "path": "packages/react/src/components/DataTable/DataTable.tsx",
      "type": "registry:component"
    },
    {
      "path": "packages/react/src/components/DataTable/DataTable.types.ts",
      "type": "registry:types"
    },
    {
      "path": "packages/react/src/components/DataTable/DataTable.module.css",
      "type": "registry:styles"
    },
    {
      "path": "packages/react/src/components/DataTable/index.ts",
      "type": "registry:index"
    }
  ],
  "props": [
    {
      "name": "columns",
      "type": "DataTableColumn<T>[]",
      "description": "Column definitions",
      "required": true
    },
    {
      "name": "data",
      "type": "T[]",
      "description": "Data rows",
      "required": true
    },
    {
      "name": "rowKey",
      "type": "keyof T | ((row: T, index: number) => Key)",
      "description": "Row key accessor (defaults to 'id')"
    },
    {
      "name": "searchable",
      "type": "boolean",
      "description": "Enable search functionality",
      "default": false
    },
    {
      "name": "searchPlaceholder",
      "type": "string",
      "description": "Search placeholder text"
    },
    {
      "name": "searchValue",
      "type": "string",
      "description": "Current search value (controlled)"
    },
    {
      "name": "onSearchChange",
      "type": "(value: string) => void",
      "description": "Search change handler"
    },
    {
      "name": "filters",
      "type": "DataTableFilter[]",
      "description": "Filter definitions"
    },
    {
      "name": "filterValues",
      "type": "Record<string, unknown>",
      "description": "Active filter values"
    },
    {
      "name": "onFilterChange",
      "type": "(key: string, value: unknown) => void",
      "description": "Filter change handler"
    },
    {
      "name": "pagination",
      "type": "DataTablePagination",
      "description": "Pagination configuration"
    },
    {
      "name": "onPaginationChange",
      "type": "(\n    pagination: Pick<DataTablePagination, \"page\" | \"pageSize\">,\n  ) => void",
      "description": "Pagination change handler"
    },
    {
      "name": "selectable",
      "type": "boolean",
      "description": "Enable row selection",
      "default": false
    },
    {
      "name": "selectedKeys",
      "type": "Key[]",
      "description": "Selected row keys"
    },
    {
      "name": "onSelectionChange",
      "type": "(keys: Key[]) => void",
      "description": "Selection change handler"
    },
    {
      "name": "bulkActions",
      "type": "DataTableBulkAction[]",
      "description": "Bulk actions for selected rows"
    },
    {
      "name": "rowActions",
      "type": "DataTableRowAction<T>[]",
      "description": "Per-row actions"
    },
    {
      "name": "sort",
      "type": "DataTableSort",
      "description": "Current sort state"
    },
    {
      "name": "onSortChange",
      "type": "(sort: DataTableSort | undefined) => void",
      "description": "Sort change handler"
    },
    {
      "name": "emptyState",
      "type": "DataTableEmptyState",
      "description": "Empty state configuration"
    },
    {
      "name": "loading",
      "type": "boolean",
      "description": "Loading state",
      "default": false
    },
    {
      "name": "striped",
      "type": "boolean",
      "description": "Striped rows",
      "default": false
    },
    {
      "name": "hoverable",
      "type": "boolean",
      "description": "Hoverable rows",
      "default": true
    },
    {
      "name": "compact",
      "type": "boolean",
      "description": "Compact mode",
      "default": false
    },
    {
      "name": "stickyHeader",
      "type": "boolean",
      "description": "Sticky header",
      "default": false
    },
    {
      "name": "maxHeight",
      "type": "string",
      "description": "Table max height (enables scrolling)"
    },
    {
      "name": "onRowClick",
      "type": "(row: T, index: number) => void",
      "description": "Row click handler"
    },
    {
      "name": "toolbar",
      "type": "ReactNode",
      "description": "Toolbar content (rendered before table)"
    }
  ],
  "modeAware": false,
  "preview": {
    "url": "https://orion-ds.dev/library.html#data-table",
    "local": "/library.html#data-table"
  },
  "import": "import { DataTable } from '@orion-ds/react'",
  "cssImport": "import '@orion-ds/react/styles.css'"
}
