{
  "$schema": "https://orion-ds.dev/schema/registry-item.json",
  "name": "progress-bar",
  "type": "registry:component",
  "title": "ProgressBar",
  "description": "Visual progress indicator",
  "category": "feedback",
  "files": [
    {
      "path": "packages/react/src/components/ProgressBar/ProgressBar.tsx",
      "type": "registry:component"
    },
    {
      "path": "packages/react/src/components/ProgressBar/ProgressBar.types.ts",
      "type": "registry:types"
    },
    {
      "path": "packages/react/src/components/ProgressBar/ProgressBar.module.css",
      "type": "registry:styles"
    },
    {
      "path": "packages/react/src/components/ProgressBar/index.ts",
      "type": "registry:index"
    }
  ],
  "props": [
    {
      "name": "value",
      "type": "number",
      "description": "Progress value (0-100)"
    },
    {
      "name": "max",
      "type": "number",
      "description": "Maximum value",
      "default": 100
    },
    {
      "name": "variant",
      "type": "ProgressBarVariant",
      "description": "Progress bar variant (color)",
      "default": "primary",
      "values": [
        "primary",
        "success",
        "warning",
        "error",
        "info"
      ]
    },
    {
      "name": "size",
      "type": "ProgressBarSize",
      "description": "Progress bar size",
      "default": "md",
      "values": [
        "sm",
        "md",
        "lg"
      ]
    },
    {
      "name": "showLabel",
      "type": "boolean",
      "description": "Show percentage label",
      "default": false
    },
    {
      "name": "label",
      "type": "string",
      "description": "Custom label text"
    },
    {
      "name": "indeterminate",
      "type": "boolean",
      "description": "Indeterminate/loading state",
      "default": false
    }
  ],
  "tokens": [
    "--surface-layer",
    "--interactive-primary",
    "--status-success",
    "--status-warning",
    "--status-error"
  ],
  "examples": [
    {
      "title": "Basic progress",
      "code": "<ProgressBar value={75} />"
    },
    {
      "title": "With label",
      "code": "<ProgressBar value={45} showLabel variant=\"success\" />"
    }
  ],
  "accessibility": {
    "role": "progressbar",
    "ariaAttributes": [
      "aria-valuenow",
      "aria-valuemin",
      "aria-valuemax",
      "aria-label"
    ]
  },
  "modeAware": false,
  "preview": {
    "url": "https://orion-ds.dev/library.html#progress-bar",
    "local": "/library.html#progress-bar"
  },
  "import": "import { ProgressBar } from '@orion-ds/react'",
  "cssImport": "import '@orion-ds/react/styles.css'"
}
