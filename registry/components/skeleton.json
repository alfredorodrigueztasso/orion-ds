{
  "$schema": "https://orion-ds.dev/schema/registry-item.json",
  "name": "skeleton",
  "type": "registry:component",
  "title": "Skeleton",
  "description": "Placeholder for loading content",
  "category": "loading",
  "files": [
    {
      "path": "packages/react/src/components/Skeleton/Skeleton.tsx",
      "type": "registry:component"
    },
    {
      "path": "packages/react/src/components/Skeleton/Skeleton.types.ts",
      "type": "registry:types"
    },
    {
      "path": "packages/react/src/components/Skeleton/Skeleton.module.css",
      "type": "registry:styles"
    },
    {
      "path": "packages/react/src/components/Skeleton/index.ts",
      "type": "registry:index"
    }
  ],
  "props": [
    {
      "name": "variant",
      "type": "SkeletonVariant",
      "description": "Shape variant of the skeleton",
      "default": "text",
      "values": [
        "text",
        "circular",
        "rectangular",
        "rounded"
      ]
    },
    {
      "name": "animation",
      "type": "SkeletonAnimation",
      "description": "Animation type",
      "default": "pulse",
      "values": [
        "pulse",
        "wave",
        "none"
      ]
    },
    {
      "name": "width",
      "type": "number | string",
      "description": "Width of the skeleton"
    },
    {
      "name": "height",
      "type": "number | string",
      "description": "Height of the skeleton"
    },
    {
      "name": "lines",
      "type": "number",
      "description": "Number of skeleton lines to render (for text variant)",
      "default": 1
    },
    {
      "name": "borderRadius",
      "type": "number | string",
      "description": "Border radius override"
    }
  ],
  "tokens": [
    "--surface-layer"
  ],
  "examples": [
    {
      "title": "Text skeleton",
      "code": "<Skeleton variant=\"text\" width=\"80%\" />\n<Skeleton variant=\"text\" width=\"60%\" />"
    },
    {
      "title": "Card skeleton",
      "code": "<Skeleton variant=\"rectangular\" width=\"100%\" height={200} />\n<Skeleton variant=\"text\" />\n<Skeleton variant=\"text\" width=\"60%\" />"
    }
  ],
  "modeAware": false,
  "preview": {
    "url": "https://orion-ds.dev/library.html#skeleton",
    "local": "/library.html#skeleton"
  },
  "import": "import { Skeleton } from '@orion-ds/react'",
  "cssImport": "import '@orion-ds/react/styles.css'"
}
