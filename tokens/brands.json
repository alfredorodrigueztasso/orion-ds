    "addingBrand": {
        "steps": [
            "1. Add brand colors to tokens/primary.json under color.brand.{name}",
            "2. Add CSS overrides to theme.css using [data-brand=\"{name}\"]",
            "3. Add brand definition to this file (tokens/brands.json)",
            "4. Update docs-shell.js brand switcher options",
            "5. Add fonts to Google Fonts import in index.html",
            "6. Create demo at testing-projects/{name}-demo/index.html"
        ],
        "template": {
            "name": "Brand Name",
            "description": "Brief description",
            "accent": {
                "primary": "#hexcolor",
                "light": "#hexcolor",
                "dark": "#hexcolor"
            },
            "typography": {
                "primary": "Font Name",
                "secondary": "Font Name",
                "mono": "JetBrains Mono"
            },
            "geometry": {
