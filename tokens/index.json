    "tri_modal_system": {
        "description": "Three distinct UI contexts with density and interaction patterns optimized for each use case",
        "modes": {
            "display": {
                "description": "Marketing and landing pages - maximum visual impact",
                "density": "spacious",
                "typography": "large",
                "touch_target": "40px",
                "use_cases": [
                    "Landing pages",
                    "Marketing sites",
                    "Hero sections",
                    "Brand showcases"
                ],
                "variables": [
                    "--mode-text-display: var(--font-size-96)",
                    "--mode-text-title: var(--font-size-64)",
                    "--mode-text-body: var(--font-size-20)",
                    "--mode-spacing-section: var(--spacing-32)",
                    "--mode-touch-target: 40px",
                    "--mode-effect-glass: blur(12px)",
                    "--mode-visual-style: \"atmospheric\""
                ]
            },
            "product": {
                "description": "SaaS applications - information density and efficiency",
                "density": "compact",
                "typography": "medium",
                "touch_target": "32px",
                "use_cases": [
                    "SaaS dashboards",
                    "Admin panels",
                    "Data tables",
                    "Analytics views"
                ],
                "variables": [
                    "--mode-text-display: var(--font-size-48)",
                    "--mode-text-title: var(--font-size-24)",
                    "--mode-text-body: var(--font-size-14)",
                    "--mode-spacing-section: var(--spacing-12)",
                    "--mode-touch-target: 32px",
                    "--mode-visual-style: \"functional\""
                ]
            },
            "app": {
                "description": "Mobile and touch applications - optimized for thumb-friendly interaction",
                "density": "mobile",
                "typography": "readable",
                "touch_target": "44px",
                "use_cases": [
                    "Mobile apps",
                    "PWAs",
                    "Touch interfaces",
                    "Kiosk systems"
                ],
                "variables": [
                    "--mode-text-display: var(--font-size-32)",
                    "--mode-text-title: var(--font-size-24)",
                    "--mode-text-body: var(--font-size-16)",
                    "--mode-spacing-section: var(--spacing-16)",
                    "--mode-touch-target: 44px",
                    "--mode-safe-area-top: env(safe-area-inset-top, 0)",
                    "--mode-safe-area-bottom: env(safe-area-inset-bottom, 0)",
                    "--mode-visual-style: \"tactile\""
                ]
            }
        },
        "utility_classes": {
            "typography": [
                ".mode-display",
                ".mode-title",
                ".mode-body"
            ],
            "spacing": [
                ".mode-section-gap"
            ],
            "interaction": [
                ".mode-touch-target"
            ],
            "buttons": [
                ".btn-mode-display",
                ".btn-mode-product",
                ".btn-mode-app"
            ],
            "cards": [
                ".card-mode-display",
                ".card-mode-product"
            ],
            "layout": [
                ".mode-safe-area-top",
                ".mode-safe-area-bottom"
            ]
        },
        "combinations": {
            "marketing_site_light": "<html data-theme=\"light\" data-mode=\"display\" data-brand=\"orion\">",
            "saas_dashboard_dark": "<html data-theme=\"dark\" data-mode=\"product\" data-brand=\"uvm\">",
            "mobile_app_branded": "<html data-theme=\"light\" data-mode=\"app\" data-brand=\"unitec\">"
        }
    },
    "usage": {
        "theme_switch": "<html data-theme=\"light|dark\">",
        "brand_switch": "<html data-theme=\"light|dark\" data-brand=\"uvm\">",
        "mode_switch": "<html data-mode=\"display|product|app\">",
        "full_config": "<html data-theme=\"dark\" data-brand=\"uvm\" data-mode=\"product\">",
        "css_import": "<link rel=\"stylesheet\" href=\"theme.css\">"
    }
